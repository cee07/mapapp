<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 xmlns:custom="clr-namespace:mapapp.Helpers"
			 x:Class="mapapp.Views.MapPage">
	<ContentPage.Content>
		<Grid>
			<StackLayout Spacing="0">
				<Grid RowSpacing="0" ColumnSpacing="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="60" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="60" />
					</Grid.RowDefinitions>
					<Button Text="Filter" Grid.Column="0" Clicked="OnClickFilterMenu"/>
					<SearchBar HorizontalOptions="FillAndExpand" Grid.Column="1"/>
				</Grid>
				<Grid ColumnSpacing="0" BackgroundColor="Transparent">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<StackLayout Margin="0" x:Name="absLayout" BackgroundColor="Transparent"
								 Orientation="Horizontal"
								 Grid.Column="0" Grid.ColumnSpan="2">
						
					</StackLayout>
					<ScrollView x:Name="filters" HorizontalOptions="Start"
							IsVisible="false" Grid.Column="0" BackgroundColor="Transparent">
						<StackLayout HorizontalOptions="Start" VerticalOptions="FillAndExpand"
									 BackgroundColor="Silver" Spacing="20">
							<Button Text="Baby Needs Store" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Breastfeeding Stations" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Kids Products &amp; Needs" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Medical Needs" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Schools &amp; Tutors" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Events" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Playgrounds" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
							<Button Text="Other Lifestyle Needs" Clicked="OnClickCategory"
									HorizontalOptions="Center"/>
						</StackLayout>
					</ScrollView>
				</Grid>
			</StackLayout>		
			<ActivityIndicator HorizontalOptions="Center" VerticalOptions="Center"
							   IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
		</Grid>
	</ContentPage.Content>
</ContentPage>
