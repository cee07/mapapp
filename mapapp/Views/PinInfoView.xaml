<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="mapapp.Views.PinInfoView">
	<ContentView.Content>
		<StackLayout Margin="20"> 
			<Label Text="{Binding EstablishmentName}" FontAttributes="Bold"
				   TextColor="#77A3B1"/>
			<Label Text="{Binding Address}" TextColor="#77A3B1" />
			<Label Text="{Binding Contact}" TextColor="#77A3B1" />
		</StackLayout>
	</ContentView.Content>
</ContentView>