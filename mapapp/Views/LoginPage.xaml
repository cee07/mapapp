<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="mapapp.Views.LoginPage">
	<ContentPage.Content>
		<Grid>
			<Image Source="login.png" Aspect="AspectFill" />
			<StackLayout VerticalOptions="FillAndExpand">
				<ImageButton Source="facebook_button.png" WidthRequest="270"
							 HorizontalOptions="Center" VerticalOptions="Center"
							 Clicked="OnFacebookClicked">
				</ImageButton>
				<ImageButton Source="google_button.png" WidthRequest="250"
							 BackgroundColor="Transparent"
							 HorizontalOptions="Center" VerticalOptions="Center"
							 Clicked="OnGoogleLoginClicked">
				</ImageButton>
				<Label Text="Skip" TextColor="Blue" VerticalOptions="End"
					   TextDecorations="Underline">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Tapped="OnClickSkip"
											  NumberOfTapsRequired="1"/>
					</Label.GestureRecognizers>
				</Label>	
			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>