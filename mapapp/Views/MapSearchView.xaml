<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="mapapp.Views.MapSearchView">
	<ContentView.Content>
		<Grid>
			<StackLayout BackgroundColor="Silver" 
					 HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
				<ListView x:Name="feedList" ItemsSource="{Binding PinModels}" HasUnevenRows="true"
						  ItemTapped="OnItemTapped">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<StackLayout Margin="20">
									<Label Text="{Binding EstablishmentName}" FontAttributes="Bold" />
									<Label Text="{Binding Address}" />
								</StackLayout>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<Button Text="More results" Clicked="OnMoreResultsClicked" />
			</StackLayout>
		</Grid>
	</ContentView.Content>
</ContentView>
