<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="mapapp.Views.FeedPage"
			 Title="Feeds">
	<ContentPage.Content>
		<StackLayout>
			<ListView x:Name="feedList" ItemsSource="{Binding FeedList}" HasUnevenRows="true"
					  ItemSelected="OnTappedFeed" IsRefreshing="{Binding IsBusy}"
					  RefreshCommand="{Binding RequestFeedCommand}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Margin="20">
								<Image Source="{Binding Thumbnail}" HeightRequest="150" 
						   			BackgroundColor="#529eb6" IsVisible="false"/>
								<Label Text="{Binding Title}" FontAttributes="Bold"
									   TextColor="#84B7C7"/>
								<Label Text="{Binding Excerpt}"
									   TextColor="#84B7C7"/>
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
